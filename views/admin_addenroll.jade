include ./layout

block content
	div.container
		div.rows
			div.col-lg-6.col-sm-10
				h1 Add Enroll
				br 
				form.form-horizontal
					div.input-group
						label.input-group-addon(for="inputID") STU ID
						div.col-sm-15
							input.form-control#id(placeholder="id", type="text")
					br
					div.progress#progress_panel(style='display:none')
						.progress-bar.progress-bar-striped.attive(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 60%')
					div.alert.alert-danger#error(style='display:none') 存在未填写的必填项,请重新检查后提交
					div.form-group
						div.col-sm-offset-0.col-sm-10
							button.btn.btn-default#addstuenroll_submit(type="submit") Submit
script(src='/javascripts/adminpanel.js')
